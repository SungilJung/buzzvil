<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingHorizontal="15dp"
  android:paddingVertical="10dp"
  android:background="@color/bz_feed_toolbar_default"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/feedHeaderTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textStyle="bold"
    android:textSize="16sp"
    android:paddingRight="5dp"
    android:textColor="@color/ba_feed_activity_toolbar_title_text"
    />

  <TextView
    android:id="@+id/rewardText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/feedHeaderTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="13sp"
    android:textColor="@color/ba_feed_activity_toolbar_title_text"
    />

  <ImageView
    android:id="@+id/inquiry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:src="@drawable/inquiry"
    app:tint="@color/ba_feed_activity_toolbar_title_text" />
</androidx.constraintlayout.widget.ConstraintLayout>
